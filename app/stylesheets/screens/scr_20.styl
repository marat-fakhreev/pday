#screen-twenty
  h2
    text-align: center
    text-transform: none
    font-size: 46px
    line-height: 1.4

  .message
    border-color: #fff
    margin: 60px 0
    padding: 45px
    @extend #screen-thirteen .reviews ul li .review-item

    p
      text-align: center

    .icon-quote-top
      color: $blueColor
      @extend #screen-thirteen .reviews ul li .icon-quote-top

    .icon-quote-bottom
      color: $blueColor
      @extend #screen-thirteen .reviews ul li .icon-quote-bottom

  .social-comment-block
    margin: 0

  .partners
    margin: 50px 0 0 0
    padding: 0 384px

    &::after
      content: ''
      display: block
      clear: both

    .partner-logo
      padding: 0 10px

    .logo-1
      @extend #screen-one .header .logo

      .logo-part-one
        color: #fff

      .logo-part-two
        bottom: 0
        right: 35px
