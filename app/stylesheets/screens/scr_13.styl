#screen-thirteen
  .reviews
    margin: 80px 0 0 0

    ul
      li
        margin: 0 0 40px 0

        .review-item
          box-sizing: border-box
          width: 100%
          padding: 35px 45px
          border: 4px solid $blueLightColor
          position: relative

        .review-author
          margin: 5px 0 0 0
          text-align: right
          font-size: 18px
          color: #3b3b3b

          span
            font-size: inherit
            text-decoration: underline
            color: $blueColor
            margin-right: 10px

        .icon-quote-top
        .icon-quote-bottom
          position: absolute
          font-size: 24px

        .icon-quote-top
          left: 10px
          top: 10px

        .icon-quote-bottom
          right: 10px
          bottom: 10px

        p
          font-size: 18px

    .expander
      position: relative

      &::after
        content: ''
        top: 30px
        left: 0px
        width: 960px
        height: 1px
        position: absolute
        background-color: $blueColor
        box-shadow: 0 1px 0 #bdccd3

      .button
        z-index: 10
        position: relative
        left: 50%
        margin: 0 0 0 -132px
